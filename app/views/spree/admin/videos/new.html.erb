<%= content_for :page_actions do %>
    <%= button_link_to t(:back_to_videos_list), admin_product_videos_url(@product), { icon: 'icon-arrow-left', id: 'admin_new_video' } %>
<% end %>

<%= render partial: 'spree/admin/shared/product_tabs', locals: { current: t('videos') } %>
<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @video } %>

<%= form_for @video, as: :video, url: admin_product_videos_path(@product), method: :post, html: { multipart: true } do |f| %>
  <fieldset class="no-border-top">
    <%= render partial: 'form', locals: { f: f } %>
    <%= render partial: 'spree/admin/shared/new_resource_links' %>
  </fieldset>
<% end %>
